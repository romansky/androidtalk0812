              android:orientation="vertical">

    <LinearLayout
            android:id="@+id/todo_app__things_left_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
            android:id="@+id/todo_app__things_done_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="vertical">

    </LinearLayout>

</LinearLayout>